    function renderPelanggaran() {
      const container = document.getElementById('pelanggaran-container');
      for (let pasal in dataPelanggaran) {
        const section = document.createElement('div');
        section.classList.add('pasal-section');
        section.innerHTML = `<h2>${pasal}</h2>`;
        dataPelanggaran[pasal].forEach((p, index) => {
          section.innerHTML += `
            <label>
              <input type="checkbox" data-denda="${p.denda || 0}" data-tahanan="${p.tahanan || 0}" data-imp="${p.imp || ''}" data-sidang="${p.sidang || false}">
              ${p.kode} - ${p.nama} (${p.denda ? '$' + p.denda : ''}${p.tahanan ? ', ' + p.tahanan + ' bln' : ''}${p.imp ? ', ' + p.imp : ''}${p.sidang ? ', Persidangan' : ''})
            </label>`;
        });
        container.appendChild(section);
      }
    }

    function hitungSanksi() {
      const ceklist = document.querySelectorAll('input[type="checkbox"]:checked');
      let totalDenda = 0, totalTahanan = 0;
      let impounds = [], sidang = false;

      ceklist.forEach(c => {
        totalDenda += parseInt(c.dataset.denda);
        totalTahanan += parseInt(c.dataset.tahanan);
        if (c.dataset.imp) impounds.push(c.dataset.imp);
        if (c.dataset.sidang === "true") sidang = true;
      });

      document.getElementById("hasil").innerHTML = `
        <p><strong>Total Denda:</strong> $${totalDenda}</p>
        <p><strong>Total Masa Tahanan:</strong> ${totalTahanan} bulan</p>
        <p><strong>Impound:</strong> ${impounds.length ? impounds.join(", ") : 'Tidak ada'}</p>
        <p><strong>Persidangan:</strong> ${sidang ? 'YA' : 'Tidak ada'}</p>
      `;
    }

    renderPelanggaran();
  </script>
